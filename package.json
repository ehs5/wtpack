  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/text-table": "^0.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "text-table": "^0.2.0"
  }
}
